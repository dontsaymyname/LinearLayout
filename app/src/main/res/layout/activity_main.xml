<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="Text Center"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"

         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Texto center/left"
        android:paddingLeft="10dp"
        android:gravity="center|left"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Texto bottom/ right"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:gravity="bottom|right"
        android:textColor="@color/colorAccent"
        android:background="@color/azul"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Texto center/top"
        android:paddingTop="10dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Texto bottom"
        android:layout_weight="1"
        android:gravity="bottom|right"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/colorAccent"
        android:background="@color/roxo"
        />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="Enviar"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:background="@color/azulFacebook"/>


</LinearLayout>